    <div class="tap-hint" id="hintText">Tap screen to continue</div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const hintText = document.getElementById('hintText');
        const totalSlides = slides.length;

        // Listen for a tap anywhere on the screen
        document.body.addEventListener('click', nextSlide);
        document.body.addEventListener('touchstart', nextSlide);

        function nextSlide() {
            // If we are on the last slide, do nothing
            if (currentSlide >= totalSlides - 1) return;

            // Prepare current slide for exit animation
            slides[currentSlide].classList.remove('active-slide');
            slides[currentSlide].classList.add('exit-slide');
            
            // Move to next slide
            currentSlide++;
            
            // Bring in the next slide shortly after
            setTimeout(() => {
                 slides[currentSlide].classList.add('active-slide');
                 
                 // Hide the "Tap to continue" hint on the final slide
                 if (currentSlide === totalSlides - 1) {
                     hintText.style.display = 'none';
                 }
            }, 100); // Slight delay for smoother transition effect
        }

    </script>

